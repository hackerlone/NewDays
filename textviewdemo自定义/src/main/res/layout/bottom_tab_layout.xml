<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RadioGroup
        android:id="@+id/rgGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_main_baground"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tab_home"
            style="@style/contentTabStyle"
            android:drawableTop="@drawable/home_selector"
            android:text="首页"
            android:textColor="#666666" />

        <RadioButton
            android:id="@+id/tab_all"
            style="@style/contentTabStyle"
            android:drawableTop="@drawable/all_products_selector"
            android:text="所有商品"
            android:textColor="#666666" />

        <RadioButton
            android:id="@+id/tab_news"
            style="@style/contentTabStyle"
            android:drawableTop="@drawable/news_selector"
            android:text="最新揭晓"
            android:textColor="#666666" />

        <RadioButton
            android:id="@+id/tab_shop_cart"
            style="@style/contentTabStyle"
            android:drawableTop="@drawable/shop_cart_selector"
            android:text="购物车"
            android:textColor="#666666" />

        <RadioButton
            android:id="@+id/tab_my_baby"
            style="@style/contentTabStyle"
            android:drawableTop="@drawable/my_baby_selector"
            android:text="我的夺宝"
            android:textColor="#666666" />
    </RadioGroup>
	<com.example.textviewdemo.BadgeView
	    android:id="@+id/number"
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="0"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="90dip"
	    ></com.example.textviewdemo.BadgeView>
</RelativeLayout>
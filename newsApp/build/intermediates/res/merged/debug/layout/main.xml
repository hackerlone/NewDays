<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="vertical" >  
  
    <FrameLayout  
        android:id="@+id/content"  
        android:layout_width="match_parent"  
        android:layout_height="0dp"  
        android:layout_weight="1" >  
    </FrameLayout>  
  
    <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="45dp"  
        android:background="#F0F0F0" >  
  
        <RelativeLayout  
            android:id="@+id/tuijian_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/tuijian_image"  
                    android:layout_width="25dp"  
                    android:layout_height="25dp"  
                    android:layout_gravity="center_horizontal"  
                    android:src="@drawable/b_refresh_tabbar" />  
  
                <TextView  
                    android:id="@+id/tuijian_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_horizontal"  
                    android:text="首页"  
                    android:textColor="#82858b" />  
            </LinearLayout>  
        </RelativeLayout>  
  
        <RelativeLayout  
            android:id="@+id/daohang_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/daohang_image"  
                    android:layout_width="25dp"  
                    android:layout_height="25dp"  
                    android:layout_gravity="center_horizontal"  
                    android:src="@drawable/b_newvideo_tabbar" />  
  
                <TextView  
                    android:id="@+id/daohang_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_horizontal"  
                    android:text="视频"  
                    android:textColor="#82858b" />  
            </LinearLayout>  
        </RelativeLayout>  
  
        <RelativeLayout  
            android:id="@+id/huiyuan_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/huiyuan_image"  
                    android:layout_width="25dp"  
                    android:layout_height="25dp"  
                    android:layout_gravity="center_horizontal"  
                    android:src="@drawable/b_newcare_tabbar" />  
  
                <TextView  
                    android:id="@+id/huiyuan_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"   
                    android:layout_gravity="center_horizontal"  
                    android:text="关心"  
                    android:textColor="#82858b" />  
            </LinearLayout>  
        </RelativeLayout>  
  
        <RelativeLayout  
            android:id="@+id/wode_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/wode_image"  
                    android:layout_width="25dp"  
                    android:layout_height="25dp"   
                    android:layout_gravity="center_horizontal"  
                    android:src="@drawable/b_newmine_tabbar" />  
  
                <TextView  
                    android:id="@+id/wode_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_horizontal"  
                    android:text="我的"  
                    android:textColor="#82858b" />  
            </LinearLayout>  
        </RelativeLayout>  
        
        
        
    </LinearLayout>  
  
</LinearLayout>  